{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "preserve"
  },
  "include": [
    "src"
  ]
}
